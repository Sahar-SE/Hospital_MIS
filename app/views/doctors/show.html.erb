<p style="color: green"><%= notice %></p>

<div id="doctors">
  <p>
    <strong>Name:</strong>
    <%= @doctor.name %>
  </p>

    <p>
    <strong>Email:</strong>
    <%= @doctor.email %>
  </p>

  <p>
    <strong>Bio:</strong>
    <%= @doctor.bio %>
  </p>

  <p>
    <strong>Speciality:</strong>
    <%= @doctor.speciality %>
  </p>

  <p>
    <strong>Address:</strong>
    <%= @doctor.address %>
  </p>

  <p>
    <strong>Phone:</strong>
    <%= @doctor.phone %>
  </p>
  <% if @doctor.profile_image.attached? %>
    <%= image_tag @doctor.profile_image, style: "width: 290px" %>
    <p>
      <strong>Resume:</strong>
      <%= @doctor.documents %>
    </p>
  <% end %>
</div>
<div>
  <h1>This is Doctors Page</h1>
 <%= link_to "Edit this doctor", edit_doctor_path(@doctor) %> |
  <%= link_to "Back to doctors", doctors_path %> 

  <%= button_to "Destroy this doctor", @doctor, method: :delete %>  
</div>
