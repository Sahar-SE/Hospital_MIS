<div class="wrapper">
<p style="color: green"><%= notice %></p>
<table style="width: 80%; border: 1px solid" class="table table-hover mt-5">
  <tr>
    <th>Patient</th>
    <th>Number</th>
    <th>Is reseved</th>
  </tr>
   <% @beds.each do |bed| %>
       <%= render bed %>
       <td><%= link_to "Update", edit_bed_path(bed), class: 'btn btn-warning' %></td>
       <td><%= button_to "Cancel", bed, method: :delete, class: 'btn btn-danger' %></td>
     </tr>
  <% end %>
 </table>
</div>

<div class="wrapper"><%= link_to "New bed", new_bed_path, class: "btn btn-secondary mb-3" %></div>
</div>